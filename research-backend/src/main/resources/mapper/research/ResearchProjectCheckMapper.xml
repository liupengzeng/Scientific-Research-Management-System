<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.university.research.research.mapper.ResearchProjectCheckMapper">

    <resultMap id="CheckResult" type="com.university.research.research.domain.ResearchProjectCheck">
        <id property="id" column="id"/>
        <result property="projectId" column="project_id"/>
        <result property="checkTitle" column="check_title"/>
        <result property="checkContent" column="check_content"/>
        <result property="attachment" column="attachment"/>
        <result property="checkDate" column="check_date"/>
        <result property="resultStatus" column="result_status"/>
        <result property="comment" column="comment"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="columns">
        id, project_id, check_title, check_content, attachment, check_date, result_status, comment,
        create_by, create_time, update_by, update_time
    </sql>

    <select id="selectCheckList" resultMap="CheckResult">
        select
        <include refid="columns"/>
        from research_project_check
        <where>
            <if test="projectId != null">
                and project_id = #{projectId}
            </if>
        </where>
        order by create_time desc
    </select>

</mapper>

